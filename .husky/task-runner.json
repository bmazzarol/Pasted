{
    "tasks": [
        {
            "name": "Format C# Code",
            "command": "dotnet",
            "args": [
                "csharpier",
                "format",
                "."
            ]
        },
        {
            "name": "Lint Markdown",
            "command": "npx",
            "args": [
                "markdownlint-cli2",
                "Pasted*/**/*.md",
                "Pasted.Docs/**/*.md",
                "*.md",
                "!LICENSE.md"
            ]
        },
        {
            "name": "Test C# Code",
            "command": "dotnet",
            "args": [
                "test"
            ]
        },
        {
            "name": "Lint Docs",
            "command": "dotnet",
            "args": [
                "build",
                "Pasted.Docs/Pasted.Docs.csproj"
            ]
        }
    ]
}
